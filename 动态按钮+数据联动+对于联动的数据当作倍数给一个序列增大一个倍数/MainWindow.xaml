<Window x:Class="WpfExercise03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExercise03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="inside_canvas" Grid.Row="0">
            <Button x:Name="btn_222" Canvas.Left="0" Canvas.Top="0"  Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_click"/>
        </Canvas>
        <Grid Grid.Row="1">
            <Button x:Name="btn_start" Content="start" Width="80" Height="28" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="100 0" PreviewMouseUp="Btn_start_Click"/>
            <TextBox x:Name="txt_111" VerticalAlignment="Center" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" Width="120" Margin="200 0"/>
        </Grid>
    </Grid>
</Window>
